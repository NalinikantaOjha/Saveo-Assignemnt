<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearFirst"
    android:background="@color/dark_blue_grey"
    android:layout_weight="2"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MovieDetailsActivity">
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/layLayout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >
    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:background="#0E2751"
        android:layout_height="60dp">
        <RelativeLayout
            android:background="#0E2751"
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_margin="15dp"
                android:layout_width="30dp"
                android:id="@+id/ivMenu"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_height="30dp"
                android:contentDescription="@string/todo">

            </ImageView>
            <TextView
                android:layout_margin="15dp"
                android:layout_marginBottom="10dp"
                android:layout_alignStart="@+id/ivMenu"
                android:layout_width="match_parent"
                android:id="@+id/tvMovies"
                android:text="@string/movies"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_alignEnd="@+id/tvMovies"
                android:layout_margin="15dp"
                android:layout_width="30dp"
                android:id="@+id/ivSearch"
                android:src="@drawable/ic_baseline_content_paste_24"
                android:layout_height="30dp"
                android:contentDescription="@string/todo">

            </ImageView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/linear3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/dark_blue_grey"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/ivDetailsImage"
            android:layout_width="0dp"
            android:layout_height="300dp">
        </ImageView>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:text="TITLE"
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:textSize="10dp"
                android:id="@+id/tvDate"
                android:textColor="@color/white"
                android:text="Release Date"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content">

            </TextView>
            <TextView

                android:textSize="15dp"
                android:id="@+id/tvLanguage"
                android:textColor="@color/white"
                android:text="Language"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/linear2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
<TextView
    android:layout_width="match_parent"
    android:text="Synopsys"
    android:textColor="@color/black"
    android:textSize="30dp"
    android:layout_margin="20dp"
    android:textStyle="bold"
    android:layout_height="wrap_content">

</TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="Synopsys"
            android:id="@+id/tvDescription"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
</LinearLayout>