<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.MovieDetailsActivity">
    <Button
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:padding="10dp"
        android:text="@string/book_now"
        android:textColor="@color/LightSkyBlue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

    </Button>
    <LinearLayout
        android:layout_weight="2"
        android:background="@color/dark_blue_grey"
        android:id="@+id/linearFirst"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


<LinearLayout
    android:orientation="vertical"
    android:id="@+id/layLayout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >
    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:background="#0E2751"
        android:layout_height="60dp">
        <RelativeLayout
            android:background="#0E2751"
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_margin="15dp"
                android:layout_width="30dp"
                android:id="@+id/ivMenu"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_height="30dp"
                android:contentDescription="@string/todo">

            </ImageView>
            <TextView
                android:layout_margin="15dp"
                android:layout_marginBottom="10dp"
                android:layout_alignStart="@+id/ivMenu"
                android:layout_width="match_parent"
                android:id="@+id/tvMovies"
                android:text="@string/movies"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_alignEnd="@+id/tvMovies"
                android:layout_margin="15dp"
                android:layout_width="30dp"
                android:id="@+id/ivSearch"
                android:src="@drawable/ic_baseline_content_paste_24"
                android:layout_height="30dp"
                android:contentDescription="@string/todo">

            </ImageView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/linear3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/dark_blue_grey"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="NestedWeights">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/ivDetailsImage"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:contentDescription="@string/todo">
        </ImageView>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="5dp"
               android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="@string/title"
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginBottom="5dp"
                android:textSize="10sp"
                android:id="@+id/tvDate"
                android:textColor="@color/white"
                android:text="@string/release_date"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                tools:ignore="SmallSp">

            </TextView>
            <TextView
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:id="@+id/tvLanguage"
                android:textColor="@color/white"
                android:text="@string/language"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:textSize="15sp"
                android:id="@+id/tvVote"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
    <LinearLayout

        android:background="@color/white"
        android:id="@+id/linear2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
<TextView
    android:layout_width="match_parent"
    android:text="@string/synopsys"
    android:textColor="@color/black"
    android:textSize="30sp"
    android:layout_margin="20dp"
    android:textStyle="bold"
    android:layout_height="wrap_content">

</TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="@string/synopsys"
            android:id="@+id/tvDescription"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>